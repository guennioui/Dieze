{% extends 'base.html.twig' %}

{% block title %}Mes adresses{% endblock %}

{% block content %}
    <a href="{{ path('adresse_add') }}" class="btn btn-info btn-sm float-right">Ajouter une adresse</a>
	<h1>Mes adresses</h1>
    <a href="{{ path('account') }}">Retour</a>
    <hr>
    {% if app.user.adresses|length is same as(0) %}
        <p>Vous n'avez aucune adresse d'enregistrÃ©e.</p>
    {% else %}
    <div class="row">
        {% for adresse in app.user.adresses %}
        <div class="col-md-4">
            <div class="card" style="width: 18rem;">  
                <div class="card-body">
                    <h5 class="card-title">{{adresse.ville}}</h5>
                    <p class="card-text">
                    {{adresse.address}} <br> {{adresse.codePostal}} {{adresse.ville}} <br>
                    </p>
                    <a href="{{ path('addresse_edit', {id:adresse.id}) }}">Modifier</a> | <a href="{{ path('addresse_delete', {id:adresse.id}) }}">Supprimer</a>
                </div>
            </div>
        </div>            
        {% endfor %}
    </div>
    {% endif %}
{% endblock %}
