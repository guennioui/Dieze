{% extends 'base.html.twig' %}

{% block title %}Ajouter une adresse{% endblock %}

{% block content %}
	<h1>Mes adresses</h1>
    <a href="{{ path('account') }}">Retour</a>
    <hr>
    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-12">{{ form_row(form.address)}}</div>
            <div class="col-md-6">{{ form_row(form.ville)}}</div>
            <div class="col-md-6">{{ form_row(form.codePostal)}}</div>
        </div>
    {{ form_end(form) }}        
{% endblock %}
